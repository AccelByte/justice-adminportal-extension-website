FROM accelbyte/node:12-alpine

RUN apk update && \
    apk add --no-cache --virtual g++ make python2 && \
    apk add yarn bash git openssh

RUN mkdir -p /root/.ssh; \
  ssh-keyscan bitbucket.org >> /root/.ssh/known_hosts
